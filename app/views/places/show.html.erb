<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>

<p>
  <% for post in @posts %>
    <h3><%= post["title"] %></h3>
    <h4><%= post["posted_on"] %></h4>
    <p><%= post["description"] %></p>
    <p><% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
         <img src="<%= post["image"] %>" class="img-fluid">
      <% end %></p> 
  <% end %>
</p>

<div>
<p>
<a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
</p>
</div>

<div>
<p>
<a href="/places/" class="btn btn-success">Back to all places</a>
</p>
</div>
